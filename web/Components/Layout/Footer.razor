@namespace Web.Components.Layout

<footer class="bg-background-dark pb-8 pt-16 text-white/80">
    <div class="mx-auto max-w-[1280px] px-4 sm:px-10">
        <div class="mb-12 grid grid-cols-1 gap-10 md:grid-cols-2 lg:grid-cols-3">

            @* Brand *@
            <div class="flex flex-col gap-4">
                <div class="flex items-center gap-2 text-white">
                    <img src="/logo_white.png"
                         alt="Luzes de Esperança"
                         width="48"
                         height="48"
                         loading="lazy" />
                    <span class="text-xl font-bold">Luzes de Esperança</span>
                </div>

                <p class="text-sm leading-relaxed">
                    Desde 2025 construindo um futuro melhor através da sua generosidade.
                    Junte-se a nós nesta missão de amor ao próximo.
                </p>
            </div>

            @* Institucional *@
            <div class="flex flex-col gap-4 md:mx-auto">
                <h4 class="text-lg font-bold text-white">Institucional</h4>
                <ul class="flex flex-col gap-2 text-sm">
                    <li>
                        <a href="/sobre-nos" class="transition-colors hover:text-primary">
                            Sobre Nós
                        </a>
                    </li>
                    <li>
                        <a href="/sobre-nos#historia" class="transition-colors hover:text-primary">
                            Nossa História
                        </a>
                    </li>
                    <li>
                        <a href="#" class="transition-colors hover:text-primary">
                            Transparência
                        </a>
                    </li>
                </ul>
            </div>

            @* Contato *@
            <div class="flex flex-col gap-4 md:mx-auto">
                <h4 class="text-lg font-bold text-white">Contato</h4>
                <ul class="flex flex-col gap-3 text-sm">
                    <li class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-lg text-primary">
                            call
                        </span>
                        <span>(11) 99999-9999</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-lg text-primary">
                            mail
                        </span>
                        <span>contato@alegriadeviver.org</span>
                    </li>
                </ul>
            </div>
        </div>

        @* Rodapé inferior *@
        <div class="flex flex-col items-center justify-between gap-4 border-t border-white/10 pt-8 text-xs text-white/50 md:flex-row">
            <p>
                © @CurrentYear Associação Luzes de Esperança. Todos os direitos reservados.
            </p>

            <div class="flex gap-6">
                <a href="#" class="hover:text-white">Política de Privacidade</a>
                <a href="#" class="hover:text-white">Termos de Uso</a>
            </div>
        </div>
    </div>
</footer>
