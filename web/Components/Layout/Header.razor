<header class="sticky top-0 z-50 w-full border-b border-[#f4ede7] bg-background-light/95 backdrop-blur-sm">
    <div class="mx-auto max-w-[1280px] px-4 py-3 sm:px-10">
        <div class="flex items-center justify-between whitespace-nowrap">

            @* Logo *@
            <a href="/" class="text-sm font-medium text-text-main transition-colors hover:text-primary">
                <div class="flex items-center gap-3 text-text-main">
                    <img src="/logo.png"
                         alt="Luzes de Esperança"
                         width="48"
                         height="48"
                         loading="lazy" />

                    <h2 class="tracking-[-0.015em] text-lg font-bold text-text-main">
                        Luzes de Esperança
                    </h2>
                </div>
            </a>

            @* Menu Desktop *@
            <div class="hidden flex-1 items-center justify-end gap-8 md:flex">
                <nav class="flex items-center gap-8">
                    <a href="/" class="text-sm font-medium text-text-main transition-colors hover:text-primary">
                        Início
                    </a>

                    <a href="/sobre-nos" class="text-sm font-medium text-text-main transition-colors hover:text-primary">
                        Sobre Nós
                    </a>

                    <a href="/contato" class="text-sm font-medium text-text-main transition-colors hover:text-primary">
                        Contato
                    </a>
                </nav>
            </div>

            @* Botão menu mobile *@
            <div class="text-text-main md:hidden">
                <button @onclick="ToggleMobileMenu"
                        aria-label="Abrir ou fechar menu"
                        class="cursor-pointer">
                    <span class="material-symbols-outlined">
                        @(IsMobileMenuOpen ? "close" : "menu")
                    </span>
                </button>
            </div>
        </div>

        @* Menu Mobile *@
        @if (IsMobileMenuOpen)
        {
            <div class="mt-4 border-t border-[#f4ede7] pb-4 pt-4 md:hidden">
                <nav class="flex flex-col gap-4">
                    <a href="/" @onclick="CloseMobileMenu"
                       class="text-sm font-medium text-text-main transition-colors hover:text-primary">
                        Início
                    </a>

                    <a href="/sobre-nos" @onclick="CloseMobileMenu"
                       class="text-sm font-medium text-text-main transition-colors hover:text-primary">
                        Sobre Nós
                    </a>

                    <a href="/contato" @onclick="CloseMobileMenu"
                       class="text-sm font-medium text-text-main transition-colors hover:text-primary">
                        Contato
                    </a>
                </nav>
            </div>
        }
    </div>
</header>
