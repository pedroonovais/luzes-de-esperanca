@namespace Web.Components.Sections
@using web.Components.Cards

<section class="w-full bg-white py-12">
    <div class="mx-auto max-w-[1024px] px-4 sm:px-10">
        <div class="flex flex-col gap-12">

            <div class="flex flex-col gap-4 text-center">
                <h2 class="text-3xl font-bold leading-tight tracking-tight text-text-main md:text-4xl">
                    Por que Contribuir?
                </h2>

                <p class="mx-auto max-w-2xl text-lg leading-relaxed text-text-secondary">
                    Contribuir com projetos solidários é uma forma prática de participar
                    ativamente na construção de uma sociedade mais justa e acolhedora.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                @foreach (var value in Reasons)
                {
                    <HighlightCard Icon=@value.Icon Title=@value.Title Description=@value.Description/>
                }
            </div>

        </div>
    </div>
</section>
