@using web.Components.Cards

<section class="w-full bg-background-light py-12">
    <div class="mx-auto max-w-[1024px] px-4 sm:px-10">
        <div class="flex flex-col gap-12">

            @* Cabeçalho *@
            <div class="flex flex-col gap-4 text-center md:text-left">
                <h2 class="text-3xl font-bold leading-tight tracking-tight text-text-main md:text-4xl">
                    Nossa Missão e Valores
                </h2>

                <p class="mx-auto max-w-2xl text-lg leading-relaxed text-text-secondary md:mx-0">
                    Trabalhamos com transparência e dedicação para garantir que cada
                    doação faça a diferença na comunidade.
                </p>
            </div>

            @* Cards *@
            <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                @foreach (var value in Values)
                {
                    <HighlightCard Icon=@value.Icon Title=@value.Title Description=@value.Description BackgroundColor="bg-white"/>
                }
            </div>

        </div>
    </div>
</section>
