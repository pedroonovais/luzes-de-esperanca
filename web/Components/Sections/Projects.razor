@namespace Web.Components.Sections

<section class="w-full bg-background-light py-12">
    <div class="mx-auto max-w-[1280px] px-4 sm:px-10">
        <div class="mb-10 flex flex-col items-center">
            <h2 class="text-center text-3xl font-bold text-text-main md:text-4xl">
                Nossos Projetos Recentes
            </h2>
            <div class="mt-4 h-1 w-20 rounded-full bg-primary"></div>
        </div>

        <div class="@GetGridClasses()">
            @foreach (var project in ProjectsList)
            {
                <NavLink href="@($"/projetos/{project.Slug}")"
                         class="group flex w-full max-w-md flex-col rounded-xl border border-[#e8dbce] bg-white p-4 transition-shadow hover:shadow-md"
                         @onclick="() => HandleProjectClick(project.Slug)">

                    <div class="mb-4 aspect-video overflow-hidden rounded-xl">
                        <img src="@project.Image"
                             alt="@project.Alt"
                             class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105" />
                    </div>

                    <div class="flex flex-col gap-2">
                        <h3 class="text-xl font-bold text-text-main group-hover:text-primary">
                            @project.Title
                        </h3>

                        <p class="text-sm text-text-secondary">
                            @project.Description
                        </p>
                    </div>

                    <div className="flex items-center gap-2 text-primary text-sm font-medium mt-2 group-hover:gap-3 transition-all">
                        <span>Saber mais</span>
                        <span className="material-symbols-outlined text-sm">
                            arrow_forward
                        </span>
                    </div>
                </NavLink>
            }
        </div>
    </div>
</section>
