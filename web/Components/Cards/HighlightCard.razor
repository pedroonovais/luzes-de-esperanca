<div data-aos="fade-right" class="flex flex-col gap-4 rounded-xl border border-[#e8dbce]
                                    @BackgroundColor p-6 transition-shadow hover:shadow-md">

    
    @if (!String.IsNullOrEmpty(@Icon))
    {
        <div class="flex size-12 items-center justify-center rounded-full bg-primary/10 text-primary">
            <span class="material-symbols-outlined text-3xl">
                @Icon
            </span>
        </div>
    }
    
    <div class="flex flex-col gap-2">
        <h3 class="text-xl font-bold text-text-main">
            @Title
        </h3>

        <p class="mb-4 text-base leading-relaxed text-text-secondary">
            @Description
        </p>
    </div>
</div>